{
  "name": "@modulz/radix-repo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "website": "lerna exec --scope website -- yarn start",
    "website:build": "lerna exec --scope website -- yarn build",
    "radix-poc": "lerna exec --scope radix-poc -- yarn watch",
    "radix-poc:build": "lerna exec --scope radix-poc -- yarn build",
    "start": "npm-run-all --parallel website radix-poc",
    "prettier": "prettier \"./**/*.{js,jsx,ts,tsx,json,yml,yaml,css,md}\"",
    "format": "yarn prettier -- --write ",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./packages",
    "clean": "npm run clean-logs && npm run clean-modules",
		"clean-logs": "rimraf ./packages/*/npm-debug* && rimraf ./*-debug*",
    "clean-modules": "rimraf ./packages/*/node_modules/ && rimraf ./node_modules/",
    "prerelease": "yarn radix-poc:build",
    "release": "lerna publish"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-react-app": "^4.0.0",
    "eslint-plugin-flowtype": "3.6.1",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.6.0",
    "husky": "^2.1.0",
    "lerna": "^3.5.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx ./packages",
      "git add"
    ]
  }
}
